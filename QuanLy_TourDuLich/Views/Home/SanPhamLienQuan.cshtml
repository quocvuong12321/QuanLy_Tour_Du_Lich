@using QuanLy_TourDuLich.Models
@model List<Tour>

@helper Truncate(string text, int lengh)
{
    if (text.Length <= lengh)
    {
        @text
    }
    else
    {
        @text.Substring(0, lengh)<text></text>
    }
}

<strong style="font-size: 35px; color: black; margin-left: 20px" class="text-center">Sản phẩm liên quan</strong>
@{
    if (Model != null)
    {
        <div style="margin-left:80px">
            @foreach (var item in Model)
            {
                <div class="card" style="width: 18rem;">
                    @Html.Action("AnhChoCard", "Home", new { id = item.id });
                    <div class="card-body">
                        <a href="~/Home/ChiTietTour/@item.id" class="nav-link" style="font-size:20px;">@Truncate(item.Name, 50)</a>
                        <p class="text-body">Giá: <span class="text-danger">@String.Format("{0:0,00}", item.Gia) đ</span></p>
                    </div>
                </div>
                <br />
            }
        </div>
    }
}

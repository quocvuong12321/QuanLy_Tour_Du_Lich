@model QuanLy_TourDuLich.Models.Tour

@{
    ViewBag.Title = "Chi tiết tour";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<div class="container">

    <div class="row">
        <div class="col-md-12">
            <h2>@Model.Name</h2>
            <p><strong>Mã tour:</strong> @Model.id</p>
            <p><strong>Loại tour:</strong> @Model.Loai_Tour.Name</p>
            <p><strong>Giá:</strong> @Model.Gia</p>
            <p><strong>Tiêu đề:</strong> @Model.TieuDe</p>
            <p><strong>Mô tả:</strong></p>
            <p>@Html.Raw(Model.MoTa)</p>
            <p><strong>Lịch trình:</strong></p>
            <p>@Html.Raw(Model.LichTrinh)</p>
            <p><strong>Điểm khởi hành:</strong> @Model.DiemKhoiHanh</p>
            <p><strong>Điểm đến:</strong> @Model.DiemDen</p>
            <p><strong>Ngày khởi hành:</strong> @String.Format("{0: dd/MM/yyyy}", Model.NgayKhoiHanh)</p>
            <p><strong>Ngày kết thúc:</strong> @String.Format("{0: dd/MM/yyyy}", Model.NgayKetThuc)</p>
            <p><strong>Số lượng còn:</strong> @Model.SoLuongCon</p>
            <p>Danh sách ảnh</p>
            @Html.Action("dsAnh", "HomeAdmin")
            <p>
                @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-primary" })
            </p>
        </div>
    </div>
</div>


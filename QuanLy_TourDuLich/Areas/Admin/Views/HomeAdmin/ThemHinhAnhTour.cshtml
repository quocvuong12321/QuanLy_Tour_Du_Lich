@model int

@{
    ViewBag.Title = "Thêm ảnh";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<b style="font-size:45px; color:black">
    Thêm hình ảnh vào tour</b>

    @using (Html.BeginForm("ThemHinhAnhTour", "HomeAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <input type="text" name="Tour_id" value="model" hidden />
            <div class="form-group">
                <Label class="col-md-2">Images</Label>
                <div class="col-md-10">
                    <input type="file" name="fileUpload" multiple />
                    @ViewBag.Thongbao
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

@model IEnumerable<QuanLy_TourDuLich.Models.KhachHang>

@{
    ViewBag.Title = "Quản lý tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<b style="font-size:45px; color:black">Quản lý tài khoản</b>

<p>
    @Html.ActionLink("Thêm người dùng", "Create", null, new { @class = "btn btn-primary", @style = "font: bold; color:white; border-radius: 5px; font-weight: bold" })
</p>
<table class="table table-bordered">
    <tr>
        <th>
            <lable>Role</lable>
        </th>
        <th>
            <lable>Tên</lable>
        </th>
        <th>
            <label>Email</label>
        </th>
        <th>
            <label>Số điện thoại</label>
        </th>
        <th>
            <label>Địa chỉ</label>
        </th>
        <th>
            <label>Mật khẩu</label>
        </th>
        <th>
            <label>Giới tính</label>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Role.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioiTinh)
            </td>

        </tr>
    }

</table>


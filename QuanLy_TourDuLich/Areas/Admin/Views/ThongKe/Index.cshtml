@using QuanLy_TourDuLich.Models;
@model List<ChiTiet_DatTour>
@{
    ViewBag.Title = "View1";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
    int grandTotal = 0;
}

<!DOCTYPE html>
<html>
<head>
    <title>Sales Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .sales-overview {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .sales-chart {
            width: 70%;
        }

        .stats {
            width: 25%;
            background-color: #f2f2f2;
            padding: 20px;
            border-radius: 5px;
        }

        .recent-transactions {
            background-color: #f2f2f2;
            padding: 20px;
            border-radius: 5px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #333;
            color: #fff;
        }
    </style>
</head>
<body>
    <b style="font-size:45px; color:black">Tổng doanh thu</b>
        <div class="recent-transactions">
            <h3>Các Tour được đặc</h3>
            <table>
                <thead>
                    <tr>
                        <th>Tên khách hàng</th>
                        <th>Tour</th>
                        <th>Số người đặt</th>
                        <th>Giá</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    int totalPrice = (int)item.Tour.Gia * (int)item.SoNguoiDat;
                    grandTotal += totalPrice ;
                    <thead>
                    <tr>
                        <th>@Html.DisplayFor(modelItem => item.DatTour.KhachHang.Name)</th>
                        <th>@Html.DisplayFor(modelItem => item.Tour.Name)</th>
                        <th>@Html.DisplayFor(modelItem => item.SoNguoiDat)</th>
                        
                        <th>@String.Format("{0:0,00}", (item.Tour.Gia * item.SoNguoiDat)) đ</th>

                    </tr>
                </thead>
                }
            </table>
            <div>
                <strong>Doanh thu: @String.Format("{0:0,00}",@grandTotal) đ</strong> 
            </div>
        </div>
    </div>
</body>
</html>

